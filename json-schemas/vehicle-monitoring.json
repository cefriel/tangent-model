{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Schema for vehicle-monitoring",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "type": {
        "type": "string"
      },
      "recordedAtTime": {
        "type": "string"
      },
      "monitoredVehicleJourney": {
        "type": "object",
        "properties": {
          "vehicleRef": {
            "type": "string"
          },
          "lineRef": {
            "type": "string"
          },
          "publishedLineName": {
            "type": "string"
          },
          "directionRef": {
            "type": "string"
          },
          "operatorRef": {
            "type": "string"
          },
          "originRef": {
            "type": "string"
          },
          "originName": {
            "type": "string"
          },
          "originAimedDepartureTime": {
            "type": "string"
          },
          "destinationRef": {
            "type": "string"
          },
          "destinationName": {
            "type": "string"
          },
          "destinationAimedArrivalTime": {
            "type": "string"
          },
          "delay": {
            "type": "number"
          },
          "occupancy": {
            "type": "number"
          },
          "framedVehicleJourneyRef": {
            "type": "object",
            "properties": {
              "dateFrameRef": {
                "type": "string"
              },
              "datedVehicleJourneyRef": {
                "type": "string"
              }
            }
          },
          "vehicleLocation": {
            "type": "object",
            "properties": {
              "longitude": {
                "type": "number"
              },
              "latitude": {
                "type": "number"
              }
            }
          },
          "bearing": {
            "type": "number"
          },
          "blockRef": {
            "type": "string"
          }
        }
      }
    }
  }
}
